<configuration>
    <variable name="ROOT_LOG_LEVEL" value="${ROOT_LOG_LEVEL:-INFO}" />
    <variable name="LOG_LEVEL" value="${LOG_LEVEL:-INFO}" />

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                %d{HH:mm:ss.SSS} %-5level [%t] %logger{36} - %msg%n
            </Pattern>
        </layout>
    </appender>

    <appender name="SUPPRESS" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                %d{HH:mm:ss.SSS} %-5level [%t] %logger{36} - %msg%n%nopex
            </Pattern>
        </layout>
    </appender>

    <appender name="ASYNC" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="STDOUT" />
    </appender>

    <logger name="org.atmosphere.cpr.AtmosphereFramework" level="${LOG_LEVEL}" additivity="false">
        <appender-ref ref="SUPPRESS" />
    </logger>
    <logger name="com.vaadin.flow.server.communication.JSR356WebsocketInitializer" level="${LOG_LEVEL}" additivity="false">
        <appender-ref ref="SUPPRESS" />
    </logger>
    <logger name="com.vaadin.flow.server.VaadinServletService" level="${LOG_LEVEL}" additivity="false">
        <appender-ref ref="SUPPRESS" />
    </logger>

    <root level="${ROOT_LOG_LEVEL}">
        <appender-ref ref="ASYNC"/>
    </root>

</configuration>
